{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "NeuroScreenCaster",
  "version": "0.1.0",
  "identifier": "com.neuroscreencaster.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "NeuroScreenCaster",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "maximized": true,
        "resizable": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$VIDEO/NeuroScreenCaster/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/ffmpeg"
    ]
  }
}
